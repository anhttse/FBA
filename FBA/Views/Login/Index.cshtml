@model FBA.Models.User
@{
    ViewBag.Title = "Login";
}

<div id="login">
    <div class="form-title">login</div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new {@class = "form-control", placeholder = "Username", required = "true"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new {@class = "form-control", placeholder = "Password", type = "password"})
            </div>
            <div class="form-group">
                <button style="width: 100%" type="submit" class="btn">Login</button>
            </div>
            <div style="text-align: center" class="form-group">
                @Html.ActionLink("Create an account", "Register", "Login")
            </div>

        </div>
    }

</div>

